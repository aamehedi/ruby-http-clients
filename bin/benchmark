#!/usr/bin/env ruby

require "bundler/setup"
require 'byebug'

$: << File.expand_path(File.join(__FILE__, "..", "..", "lib"))

require "http-clients"
require 'optparse'

number     = 10
persistent = false
parallel   = false

parser = OptionParser.new do |opts|
  opts.banner = "Usage: bin/benchmark [options] URL"

  opts.on("-n N", "--number N", Integer, "Run N requests") do |n|
    number = n
  end

  opts.on("--persistent", "Try to use a persistent connection if supported by the client") do
    persistent = true
  end

  opts.on("-p", "--parallel", "Try to fire requests in parallel") do
    parallel = true
  end
end

parser.parse!

endpoint = parser.default_argv.first

HTTPClients::Benchmark.new(endpoint, number: number, persistent: persistent, parallel: parallel).run
